#java
class Solution {
    public int longestConsecutive(int[] nums) {
        if (nums.length == 0) return 0;
        Arrays.sort(nums);
        int currentst=1;
        int longst=1;
        for(int i=1;i<nums.length;i++){
              if (nums[i] == nums[i - 1]) {
                continue;
            } else if (nums[i] == nums[i - 1] + 1) {
                currentst++;
            } else {
                longst = Math.max(currentst, longst);
                currentst = 1;
            }


        }
        return Math.max(currentst,longst);
    }
}
#python
class Solution(object):
    def longestConsecutive(self, nums):
       nums.sort()
       if not nums:
            return 0
       loncon=1
       current=1
       for i in range(1, len(nums)):
            if nums[i]==nums[i-1]+1:
                current+=1
            elif nums[i]!=nums[i-1]:
                loncon=max(loncon, current)
                current=1
       return max(current,loncon)
